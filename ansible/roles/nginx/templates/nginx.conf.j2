# Template Jinja2: configuration Nginx pour servir l'application Angular en mode SPA (Single Page Application)
# Configuration basée sur /nginx/nginx.conf du dépôt GitHub
server {
    listen       80;
    server_name  localhost;
    location / {
      root   {{ web_root }};
      index  index.html;
      try_files $uri $uri/ /index.html;
    }
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
      root   /usr/share/nginx/html;
    }
    location ~* (\.html|\/sw\.js)$ {
      root   {{ web_root }};
      expires -1y;
      add_header Pragma "no-cache";
      add_header Cache-Control "public";
    }
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|json)$ {
      root   {{ web_root }};
      expires 1y;
      add_header Cache-Control "public, immutable";
    }
}

